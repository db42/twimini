<div class="left-pull">
    <div class="profile-pic">
        <img src=<%=image_url%>?s=126></img>
    </div>
    <div class="user-text">
        <span class="username"><a href="/twimini/profile/<%=id%>">@<%=username%></a></span>
        <span class="name"><%=name%></span>
        <br/>
        <span class="description">
            <%=description%>
            <%if (description=="") {%> <i>No description</i>  <%}%>
        </span>
    </div>
</div>
<div class="float-in-right details-in-right">
    <div id="fbutton" class="float-in-right following
        <%if (followed==true) {%> "> Following  <%}%>
        <%if (followed==false) {%>  follow">  Follow  <%}%>
    </div>
    <span class="float-in-right user-det"><b><%=created_at%></b></span>
    <br/>
    <span class="float-in-right user-det"><b><%=num_tweets%></b> tweets</span>
    <br/>
    <span class="float-in-right user-det"><b><%=num_followers%></b> followers</span>
    <br/>
    <span class="float-in-right user-det"><b><%=num_followings%></b> following</span>
</div>